Config { 
    -- apearance
      font = "xft:roboto:style=Regular:size=12:antialias=true:hinting=true"
    
    --, additionalFonts = []      -- DEFAULT
    --, borderColor = "#4E6CEF"   -- DEFAULT
    --, border = TopB             -- DEFAULT
    --, bgColor = "black"         -- DEFAULT
    --, fgColor = "grey"          -- DEFAULT

      --solarized theme
    , bgColor = "#002b36"
    , fgColor = "#657b83"
    , border = NoBorder
    , borderColor = "black"
    , hideOnStart = False
    , persistent = True
    , position = Top
    , lowerOnStart = True

    -- transparency
    --, alpha = 255               -- DEFAULT

    -- general behaviour
    --, position = Top            -- DEFAULT
    --, textOffset = -1           -- DEFAULT
    --, iconOffset = -1           -- DEFAULT
    --, lowerOnStart = True       -- DEFAULT
    --, pickBroadest = False      -- DEFAULT
    --, persistent = False        -- DEFAULT
    --, hideOnStart = False       -- DEFAULT
    --, iconRoot = "."            -- DEFAULT
    --, allDesktops = True        -- DEFAULT
    --, overrideRedirect = True   -- DEFAULT

    -- plugins
    , commands =

        -- weather 
        [ Run Weather "CYYZ" 
            [ "-t", "Toronto: <tempC>C"
            , "-L", "10", "-H", "30"
            , "--normal","#657b83","--high","#657b83","--low","#657b83"
            ] 36000

        -- connectivity
        , Run Wireless "wlp3s0" 
            [ "-L", "0"
            , "-H", "30"
            , "--normal","#657b83","--high","#657b83"
            , "-p", "3"
            , "-t", "<essid>: <quality>"
            ] 30

        -- CPU
        , Run Cpu 
            [ "-L","3","-H","50"
            , "--normal", "#657b83"
            , "--high", "#657b83"
            ] 10
        
        -- Memory
        , Run Memory
            [ "-t","Mem: <usedratio>%"
            ] 10
        
        -- battery 0
        , Run BatteryP ["BAT0", "BAT1"]
            ["-t", "<acstatus>"
            , "-L", "10", "-H", "80"
            , "-l", "#657b83", "-h", "#657b83"
            , "--", "-O", "Charging", "-o", "Battery: <left>%"
            ] 10

        -- Thermalzone: how hot
        , Run ThermalZone 0 ["-t","Temp: <temp>C"] 30

		--To Do: fix the time to EST
        , Run Date "<fc=#93a1a1>%a %b %_d %Y %H:%M</fc>" "date" 10
        
        -- XMonad
        , Run StdinReader
        ]
    
    -- layout
    , sepChar = "%"
    , alignSep = "}{"
    , template = "%StdinReader% }{ %cpu% | %memory% | %wlp3s0wi% | %CYYZ% | %thermal0% | %battery% | %date%"
    }

